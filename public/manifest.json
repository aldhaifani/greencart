{
  "manifest_version": 3,
  "name": "GreenCart",
  "description": "Make eco-friendly shopping decisions on Amazon by seeing the CO2 footprint of products in real-time. Track your environmental impact and shop more sustainably.",
  "version": "1.0",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/*",
        "https://*.amazon.co.uk/*",
        "https://*.amazon.ca/*",
        "https://*.amazon.de/*",
        "https://*.amazon.fr/*"
      ],
      "js": ["content_script.js"],
      "css": ["content_script.css"]
    }
  ],
  "background": {
    "type": "module",
    "service_worker": "service_worker.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://*.amazon.com/*",
    "https://*.amazon.co.uk/*",
    "https://*.amazon.ca/*",
    "https://*.amazon.de/*",
    "https://*.amazon.fr/*"
  ]
}
